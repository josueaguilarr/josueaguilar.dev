---
import Container from "@components/Container.astro";
import Arrow from "@icons/Arrow.svg";
import Github from "@icons/Githubv2.svg";
import Code from "@icons/Code.svg";
import { PROJECTS } from "@/utils/data";
import TitleSection from "./TitleSection.astro";
---

<Container className="min-h-screen">
  <TitleSection Icon={Code}>Projects</TitleSection>

  {
    PROJECTS.map(({ title, description, tags, image, github, link }) => (
      <div class="flex flex-col md:flex-row mb-12 font-geist group/card md:gap-x-8">
        <div class="">
          <div class="md:max-w-md relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl md:group-hover/card:-translate-y-1 md:group-hover/card:shadow-2xl border border-yellow-500/30 lg:hover:border-yellow-700 lg:hover:bg-yellow-800/50">
            <img
              alt={title}
              class="object-cover object-top transition duration-500 md:scale-110 md:group-hover/card:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="flex flex-col justify-between pt-2">
          <div class="flex justify-between items-center">
            {link ? (
              <a
                href={link}
                target="_blank"
                class="flex gap-1 items-center text-default-dark dark:text-default-light text-3xl font-bold duration-500 transition group/title"
              >
                {title}
                <Arrow class="-rotate-45 size-7 opacity-50 duration-500 mb-2 group-hover/title:opacity-100 group-hover/title:translate-x-[2px]" />
              </a>
            ) : (
              <p class="text-default-dark dark:text-default-light text-3xl font-bold">
                {title}
              </p>
            )}

            {github && (
              <a
                href={`https://github.com/josueaguilarr/${github}`}
                target="_blank"
              >
                <Github class="size-6 opacity-50 hover:opacity-100 duration-500" />
              </a>
            )}
          </div>
          <p class="prose my-2 text-default-dark dark:text-default-light/70 text-lg">
            {description}
          </p>
          <ul class="flex flex-row flex-wrap gap-x-2 gap-y-2">
            {tags.map((tech) => (
              <li>
                <span
                  class={`flex gap-x-1 items-center border bg-neutral-200 text-neutral-900 border-neutral-200/60 dark:bg-neutral-800/60 dark:border-neutral-800 dark:text-neutral-300 rounded-xl text-xs py-1 px-2`}
                >
                  <tech.icon class="size-3" />
                  {tech.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))
  }
</Container>
